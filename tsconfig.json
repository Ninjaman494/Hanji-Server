{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "es2016",
    "lib": ["es2018"],
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "babel.config.js"]
}
